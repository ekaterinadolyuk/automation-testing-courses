pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ekaterinadolyuk/automation-testing-courses'
            }
        }

        stage('Install dependencies') {
            steps {
                dir('hm-for-lesson-10') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir('hm-for-lesson-10') {
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}